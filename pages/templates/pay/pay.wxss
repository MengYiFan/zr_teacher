.tpl-pay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999999;
}

.tpl-pay-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  background-color: #000;
  opacity: .4;
  z-index: -1;
}

.tpl-pay-container {
  width: 660rpx;
  padding: 40rpx 30rpx;
  margin: 20rpx auto;
  background-color: #fff;
  border-radius: 12rpx;
  z-index: 9999;
}

.tpl-pay-title {
  font-size: 26rpx;
}

.tpl-pay-money {
  height: 120rpx;
  line-height: 120rpx;
  margin-top: 30rpx;
  padding-left: 25rpx;
  font-size: 68rpx;
  color: #383838;
  border: 1rpx solid #f0f0f0;
}

.tpl-pay-discounts {
  width: 100%;
  min-height: 78rpx;
  line-height: 78rpx;
  margin-top: 30rpx;
}

.tpl-pay-discounts-result {
  position: relative;
  width: 100%;
  height: 100%;
  padding-left: 25rpx;
  font-size: 26rpx;
  color: #383838;
  box-sizing: border-box;
  background-color: #EEF2F5;
}

.tpl-pay-discounts-result::after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 4rpx 4rpx 0 0;
  border-color: #aaa;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -10rpx;
  right: 20rpx;
  transition: all .3s;
}

.tpl-pay-discounts-open .tpl-pay-discounts-result::after {
  transform: rotate(135deg);
}

.tpl-pay-discounts-total {
  padding: 2rpx 8rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: #ED1C24;
}

.tpl-pay-discounts-sum {
  position: absolute;
  right: 60rpx;
  top: 0;
}

.tpl-pay-discounts-list {
  height: 240rpx;
  border-top: 1rpx solid #f0f0f0;
}

.tpl-pay-discounts-checkbox {
  position: absolute;
  top: -9999rpx;
}

.tpl-pay-discounts-label {
  position: relative;
  display: block;
  height: 78rpx;
  padding-left: 25rpx;
  background-color: #fafafa;
}

.tpl-pay-discounts-checked {
  position: absolute;
  left: 0;
  top: 10rpx;
}

.tpl-pay-result {
  margin-top: 60rpx;
  padding-top: 56rpx;
  border-top: 1rpx dashed #b4b4b4;
}

.tpl-pay-result-text {
  font-size: 38rpx;
  color: #383838;
  text-align: center;
  display: block;
}

.tpl-pay-result-submit {
  width: 218rpx;
  height: 76rpx;
  line-height: 76rpx;
  margin-top: 102rpx;
  color: #fff;
  background-color: #ED1C24;
}

.tpl-pay-result-submit:active {
  opacity: .8;
}