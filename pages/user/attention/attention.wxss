/* pages/self/attention/attention.wxss */
.common-tag-title {
  font-size: 24rpx;
  margin-top: 12rpx;
}

.common-tags {
  margin-top: 28rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.common-tag {
  display: inline-block;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 30rpx;
  color: #888;
  font-weight: 300;
  background-color: #F2F3F4;
  margin: 0 20rpx 20rpx 0;
  border-radius: 10rpx;
  flex: 0 0 auto;
  width: 200rpx;
}

.common-tag-checked {
  background-color: #ED1C24;
  color: #fff;
}