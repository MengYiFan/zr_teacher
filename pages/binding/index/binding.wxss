.binding-verification-container {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.binding-input-verification {
  width: 350rpx;
  margin-right: 20rpx;
}

.binding-input-verification-code {
  position: absolute;
  top: 0;
  right: 0;
  background-color: #c4c8cc;
  z-index: 999;
  padding: 0 20rpx;
  color: #FFF;
  letter-spacing: 4rpx;
}

.binding-verification-tag {
  height: 80rpx;
  line-height: 80rpx;
  flex: 1;
  text-align: center;
  color: #666;
  background-color: #EEF2F5;
}